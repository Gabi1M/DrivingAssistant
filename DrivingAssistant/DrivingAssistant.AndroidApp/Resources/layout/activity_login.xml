
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:background="@color/mainColor2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor1">
        <ImageView
            android:contentDescription=""
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="250.0dp"
            android:id="@+id/loginImage"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30.0dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/loginInputUsername"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Username"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/loginInputPassword"
        android:password="true"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Password"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="80.0dp"/>

    <Button
        android:text="Login"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/loginButton"
        android:textColor="@color/mainColor2"
        android:background="@drawable/button_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <Button
        android:text="Register"
        android:layout_marginLeft="100.0dp"
        android:layout_marginRight="100.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/loginRegisterButton"
        android:textColor="@color/mainColor2"
        android:background="@drawable/button_border"/>

</LinearLayout>