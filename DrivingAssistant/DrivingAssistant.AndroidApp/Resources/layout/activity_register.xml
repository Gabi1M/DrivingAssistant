
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:background="@color/mainColor2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mainColor1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10.0dp"/>

        <ImageView
            android:contentDescription=""
            android:src="@drawable/logo_border_bg"
            android:layout_width="match_parent"
            android:layout_height="250.0dp"
            android:id="@+id/registerImage" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10.0dp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10.0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="25.0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="First Name"
            android:textColor="@color/mainColor1"/>

        <android.support.design.widget.TextInputEditText
            android:layout_width="0.0dp"
            android:layout_height="25.0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="First Name"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/registerInputFirstName"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35.0dp"
      android:layout_marginLeft="40.0dp"
      android:layout_marginRight="40.0dp"
      android:orientation="horizontal"
      android:weightSum="5"
      android:background="@drawable/textbox_border">

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

      <TextView
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Last Name"
        android:textColor="@color/mainColor1"/>

      <android.support.design.widget.TextInputEditText
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3"
        android:hint="Last Name"
        android:singleLine="true"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"
        android:id="@+id/registerInputLastName"/>

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35.0dp"
      android:layout_marginLeft="40.0dp"
      android:layout_marginRight="40.0dp"
      android:orientation="horizontal"
      android:weightSum="5"
      android:background="@drawable/textbox_border">

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

      <TextView
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Email"
        android:textColor="@color/mainColor1"/>

      <android.support.design.widget.TextInputEditText
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3"
        android:hint="Email"
        android:singleLine="true"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"
        android:id="@+id/registerInputEmail"/>

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35.0dp"
      android:layout_marginLeft="40.0dp"
      android:layout_marginRight="40.0dp"
      android:orientation="horizontal"
      android:weightSum="5"
      android:background="@drawable/textbox_border">

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

      <TextView
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/mainColor1"/>

      <android.support.design.widget.TextInputEditText
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3"
        android:hint="Username"
        android:singleLine="true"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"
        android:id="@+id/registerInputUsername"/>

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35.0dp"
      android:layout_marginLeft="40.0dp"
      android:layout_marginRight="40.0dp"
      android:orientation="horizontal"
      android:weightSum="5"
      android:background="@drawable/textbox_border">

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

      <TextView
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Password"
        android:textColor="@color/mainColor1"/>

      <android.support.design.widget.TextInputEditText
        android:layout_width="0.0dp"
        android:layout_height="25.0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="3"
        android:hint="Password"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"
        android:id="@+id/registerInputPassword"/>

      <Space
        android:layout_width="5.0dp"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <Button
        android:text="Register"
        android:layout_marginLeft="100.0dp"
        android:layout_marginRight="100.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/registerButton"
        android:textColor="@color/mainColor2"
        android:background="@drawable/button_border"/>

</LinearLayout>