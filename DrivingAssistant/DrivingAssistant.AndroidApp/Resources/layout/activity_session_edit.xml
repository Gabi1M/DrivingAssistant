
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2">

    <Space
        android:layout_width="match_parent"
        android:layout_height="30.0dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditTextDescription"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Description"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedStartDateTime"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Start Date"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedEndDateTime"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select End Date"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedStartPosition"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Start Location"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedEndPosition"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select End Location"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedIntermediaries"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Intermediary Locations"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedMedia"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Medias"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <Button
        android:text="Submit"
        android:layout_marginLeft="100.0dp"
        android:layout_marginRight="100.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditButtonSubmit"
        android:textColor="@color/mainColor2"
        android:background="@drawable/button_border"/>
</LinearLayout>