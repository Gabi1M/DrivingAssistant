
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2">

    <LinearLayout
        android:id="@+id/sessionLayoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/mainColor1"/>

        <android.support.design.widget.TextInputEditText
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditTextDescription"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionLayoutStartDate"
        android:layout_below="@+id/sessionLayoutDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Start Date"
            android:textColor="@color/mainColor1"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditLabelSelectedStartDateTime"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionLayoutEndDate"
        android:layout_below="@+id/sessionLayoutStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="End Date"
            android:textColor="@color/mainColor1"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditLabelSelectedEndDateTime"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionLayoutStartLocation"
        android:layout_below="@+id/sessionLayoutEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Start Location"
            android:textColor="@color/mainColor1"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditLabelSelectedStartPosition"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionLayoutEndLocation"
        android:layout_below="@+id/sessionLayoutStartLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="End Location"
            android:textColor="@color/mainColor1"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditLabelSelectedEndPosition"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionLayoutWaypoints"
        android:layout_below="@+id/sessionLayoutEndLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="20.0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/textbox_border">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Waypoints"
            android:textColor="@color/mainColor1"/>

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="center"
            android:layout_weight="3"
            android:hint="Tap To Edit"
            android:singleLine="true"
            android:textColor="@color/mainColor1"
            android:textColorHint="@color/mainColor3"
            android:background="@drawable/textbox_border"
            android:id="@+id/sessionEditLabelSelectedWaypoints"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sessionTextVideo"
        android:layout_below="@+id/sessionLayoutWaypoints"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dp"
        android:gravity="center"
        android:text="Video List"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"/>

    <LinearLayout
        android:id="@+id/sessionButtonsLayout"
        android:layout_below="@+id/sessionTextVideo"
        android:orientation="horizontal"
        android:layout_marginLeft="35.0dp"
        android:layout_marginRight="35.0dp"
        android:layout_marginTop="20.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:weightSum="4">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="25.0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/videosButtonAdd"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Modify"
            android:layout_width="0dp"
            android:layout_height="25.0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/videosButtonModify"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="25.0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/videosButtonDelete"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="View"
            android:layout_width="0dp"
            android:layout_height="25.0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/videosButtonView"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ListView
        android:layout_below="@+id/sessionButtonsLayout"
        android:layout_above="@+id/sessionEditButtonSubmit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35.0dp"
        android:layout_marginRight="35.0dp"
        android:layout_marginTop="10.0dp"
        android:id="@+id/sessionEditVideoList"
        android:background="@drawable/textbox_border">

    </ListView>

    <Button
        android:text="Submit"
        android:layout_marginLeft="50.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_marginBottom="10.0dp"
        android:layout_marginTop="10.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditButtonSubmit"
        android:textColor="@color/mainColor2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_border"/>

</RelativeLayout>