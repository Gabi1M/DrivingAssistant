
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2">

    <Space
        android:layout_width="match_parent"
        android:layout_height="30.0dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditTextDescription"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Description"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedStartDateTime"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Start Date"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedEndDateTime"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select End Date"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedStartPosition"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Start Location"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedEndPosition"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select End Location"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditLabelSelectedIntermediaries"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:hint="Tap to Select Intermediary Locations"
        android:textColor="@color/mainColor1"
        android:textColorHint="@color/mainColor3"
        android:background="@drawable/textbox_border"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="35.0dp"
        android:layout_marginRight="35.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:weightSum="4"
        android:id="@+id/mediasButtonsLayout">

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mediasButtonAdd"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Modify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mediasButtonModify"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mediasButtonDelete"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

        <Button
            android:text="View"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mediasButtonView"
            android:background="@drawable/button_border"/>

        <Space
            android:layout_width="5.0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <ListView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150.0dp"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:id="@+id/sessionEditMediaList"
        android:background="@drawable/textbox_border">

    </ListView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20.0dp"/>

    <Button
        android:text="Submit"
        android:layout_marginLeft="50.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:id="@+id/sessionEditButtonSubmit"
        android:textColor="@color/mainColor2"
        android:background="@drawable/button_border"/>
</LinearLayout>