
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp">
        <TextView
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelDescription"
            android:gravity="center" />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditTextDescription" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp">
        <TextView
            android:text="Start Position:    "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelStartPosition"
            android:gravity="center" />
        <TextView
            android:text="X  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelStartX"
            android:gravity="center" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="70.0dp"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditTextStartX" />
        <TextView
            android:text="Y  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelStartY"
            android:gravity="center" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="70.0dp"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditTextStartY" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/space1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/linearLayout3" 
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp">
        <TextView
            android:text="End Position:      "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelEndPosition"
            android:gravity="center" />
        <TextView
            android:text="X  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelEndX"
            android:gravity="center" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="70.0dp"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditTextEndX" />
        <TextView
            android:text="Y  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelEndY"
            android:gravity="center" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="70.0dp"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditTextEndY" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/space2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp">
        <TextView
            android:text="Selected media"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="257.1dp"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditLabelSelectedMedia"
            android:gravity="center|left" />
        <Button
            android:text="Select media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sessionEditButtonSelectMedia" />
    </LinearLayout>
    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sessionEditButtonSubmit"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp"/>

</LinearLayout>