            <TextView
                android:layout_width="0.0dp"
                android:layout_height="35.0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Span Line Length"
                android:textColor="@color/mainColor1"/>

            <TextView
                android:layout_width="0.0dp"
                android:layout_height="35.0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="@color/mainColor1"
                android:textColorHint="@color/mainColor3"
                android:background="@drawable/textbox_border"
                android:id="@+id/reportTextSpanLineLength"/>

            <Space
                android:layout_width="5.0dp"
