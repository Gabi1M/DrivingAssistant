                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="@color/mainColor1"
                android:textColorHint="@color/mainColor3"
                android:background="@drawable/textbox_border"
                android:id="@+id/reportTextFailFrames"/>

            <Space
                android:layout_width="5.0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10.0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@drawable/textbox_border">

            <Space
                android:layout_width="5.0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0.0dp"
                android:layout_height="35.0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Success Rate"
                android:textColor="@color/mainColor1"/>

            <TextView
                android:layout_width="0.0dp"
                android:layout_height="35.0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="@color/mainColor1"
                android:textColorHint="@color/mainColor3"
                android:background="@drawable/textbox_border"
