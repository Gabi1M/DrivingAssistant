<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor2"
    android:minWidth="25px"
    android:minHeight="25px">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settingsScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40.0dp"
            android:layout_marginRight="40.0dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20.0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45.0dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:background="@drawable/textbox_border">

                <Space
                    android:layout_width="5.0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="35.0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Camera Session"
                    android:textColor="@color/mainColor1"/>

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="35.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:textColor="@color/mainColor1"
                    android:textColorHint="@color/mainColor3"
                    android:background="@drawable/textbox_border"
                    android:id="@+id/settingsTextCameraSession"/>

                <Space
                    android:layout_width="5.0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20.0dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.0dp"
        android:layout_marginRight="60.0dp"
        android:layout_marginBottom="20.0dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/settingsButtonSave"
        android:text="Save"
        android:background="@drawable/button_border"/>

</RelativeLayout>
